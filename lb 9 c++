3)
#include <iostream>
using namespace std;
int main() {
    int n;   
    cout << "Введіть елементи масиву: ";
    cin >> n;

    int arr[100]; 
    cout << "Введіть " << n << " різних чисел:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int minIndex = 0;
    int maxIndex = 0;

    for (int i = 1; i < n; i++) {
        if (arr[i] < arr[minIndex]) {
            minIndex = i;
        }
        if (arr[i] > arr[maxIndex]) {
            maxIndex = i;
        }
    }

    int temp = arr[minIndex];
    arr[minIndex] = arr[maxIndex];
    arr[maxIndex] = temp;

    cout << "\nМасив після обміну мінімального і максимального елементів:\n";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    cout << endl;
    return 0;
}

4)  #include <iostream>
using namespace std;

  int main() {
      int n; 
      cout << "Введіть кількість елементів масиву: ";
      cin >> n;

      int arr[100];
     cout << "Введіть " << n << " чисел:\n";
     for (int i = 0; i < n; i++) {
         cin >> arr[i];
     }

     int A;
     cout << "Введіть число A: ";
     cin >> A;

     int count = 0;

     for (int i = 0; i < n; i++) {
         if (arr[i] > A) {
             count++;
        }
     }

     cout << "Кількість елементів більших за A: " << count << endl;

     return 0;
 }

 5)  #include <iostream>
using namespace std;

  int main() {
      int n;
      cout << "Введіть кількість елементів масиву: ";
      cin >> n;

      int arr[100];
     cout << "Введіть " << n << " різних чисел:\n";
     for (int i = 0; i < n; i++) {
         cin >> arr[i];
     }

     int max1 = arr[0];      
     int max2 = arr[1];

     if (max2 > max1) {
         int temp = max1;
         max1 = max2;
         max2 = temp;
     }

     for (int i = 2; i < n; i++) {
         if (arr[i] > max1) {
             max2 = max1;
             max1 = arr[i];
         }
         else if (arr[i] > max2) {
             max2 = arr[i];
         }
     }

     cout << "Другий за величиною елемент: " << max2 << endl;

     return 0;
 }

6) #include <iostream>    
using namespace std;    
int main() {

    int n;
    cout << "Введіть кількість елементів масиву: ";
    cin >> n;   
    int arr[100];    

    cout << "Введіть " << n << " чисел:\n";
    for (int i = 0; i < n; i++) {  
        cin >> arr[i];             
    }

    bool foundZero = false; 
    int position = -1;       

    for (int i = 0; i < n; i++) {
        if (arr[i] == 0) {   
            foundZero = true; 
            position = i;     
            break;            
        }
    }

    // Якщо нуль знайдено — друкуємо позицію
    if (foundZero) {
        cout << " нульовий елемент має номер: " << position << endl;
    } 
        else {
        cout << "в масиві немає нульових елементів" << endl;
    }

    return 0;   
}
