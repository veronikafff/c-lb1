1)
#include <iostream>
using namespace std;

int main() {
    const int m = 12;
    int arr[m];

    cout << " 12 цiлих чисел:\n";
    for (int i = 0; i < m; i++) {
        cin >> arr[i];
    }

    for (int i = 0; i < m - 1; i++) {
        for (int j = i + 1; j < m; j++) {
            if (arr[j] < arr[i]) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }

    cout << "\nМасив за зростанням:\n";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    for (int i = 0; i < m - 1; i++) {
        for (int j = i + 1; j < m; j++) {
            if (arr[j] > arr[i]) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
  cout << "\nМасив за спаданням:\n";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}

2)
#include <iostream>
using namespace std;

int main() {
    const int m = 12;
    int arr[m];

    cout << " 12 елементiв:\n";
    for (int i = 0; i < m; i++) {
        cin >> arr[i];
    }
 int maxIndex = 0;
    for (int i = 1; i < m; i++) {
        if (arr[i] > arr[maxIndex]) {
            maxIndex = i;
        }
    }

    for (int i = 0; i < maxIndex; i++) {
        if (arr[i] < 0) {
            arr[i] = 0;
        }
    }

    cout << "\nМасив пiсля замiни:\n";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}

