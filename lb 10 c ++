#include <iostream>
using namespace std;

int main() {

    const int m = 5;  
    const int n = 7;   

    int arr[m][n];     

    cout << "Введіть елементи масиву 5x7:\n";
    for (int i = 0; i < m; i++) {          
        for (int j = 0; j < n; j++) {     
            cin >> arr[i][j];              
        }
    }

      for (int i = 0; i < m; i++) {        
        int sum = 0;                  

     for (int j = 0; j < n; j++) {      
            sum += arr[i][j];            
        }

        cout << "Сума елементів у рядку " << i << ": " << sum << endl;
    }

    return 0;
}

