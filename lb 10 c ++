1)
#include <iostream>    
using namespace std;    
int main() {

    const int m = 4;     
    const int n = 3;     

    int arr[m][n];      

    cout << "Введіть елементи масиву 4x3:\n";
    for (int i = 0; i < m; i++) {        
        for (int j = 0; j < n; j++) {      
           cin >> arr[i][j];              
        }
    }

  
    for (int i = 0; i < m; i++) {       
        int evenCount = 0;                

        for (int j = 0; j < n; j++) {      
            if (arr[i][j] % 2 == 0) {      
                evenCount++;               
            }
        }

        
        cout << "Парних чисел у рядку " << i << ": " << evenCount << endl;
    }
}
2)
#include <iostream>
using namespace std;

int main() {

    const int m = 6;   
    const int n = 4;  

    int arr[m][n];  

    cout << "Введіть елементи масиву 6x4:\n";
    for (int i = 0; i < m; i++) {       
        for (int j = 0; j < n; j++) {     
            cin >> arr[i][j];                     }
    }

   
    for (int j = 0; j < n; j++) {         
        int evenCount = 0;               

        for (int i = 0; i < m; i++) {    
            if (arr[i][j] % 2 == 0) {     
                evenCount++;               
            }
        }

        cout << "Парних чисел у стовпчику " << j << ": " << evenCount << endl;
    }

    return 0;
}

